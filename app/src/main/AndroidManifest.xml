<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="apps.mohanad.com.londontourguide">
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RestaurantActivity"
            android:label="Restaurants"></activity>

        <activity android:name=".HotelActivity"
            android:label="Hotels"/>
        <activity android:name=".HospitalActivity"
            android:label="Hospitals"/>
        <activity android:name=".ShopActivity"
            android:label="Shops"/>
    </application>

</manifest>