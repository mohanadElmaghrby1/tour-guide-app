<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--the category texts style-->
    <style name="main_activity_category">
        <item name="android:gravity">center|left</item>
        <item name="android:textStyle">bold</item>
        <!--<item name="android:fontFamily">serif</item>-->
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/category_text_color</item>
    </style>

    <!--style the london name on image-->
    <style name="london_style">
        <item name="android:textSize">@dimen/london_text_size</item>
        <item name="android:layout_marginLeft">@dimen/london_margin</item>
        <item name="android:textColor">@color/colorlondon</item>
        <item name="android:fontFamily">serif</item>
        <!--<item name="android:layout_alignParentBottom">true</item>-->
    </style>

    <!--style the name of the location (restaurant , hotel , shop or hospital )-->
    <style name="location_name">
        <item name="android:textColor">#5173c1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">24dp</item>
    </style>

    <!--style the location city-->
    <style name="location_city">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>
</resources>
